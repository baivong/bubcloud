{
    "files.exclude": {
        "**/node_modules": true
    },
    "search.exclude": {
        "**/dist": true,
        "**/public": true,
        "**/src/assets/css/": true
    },
    "files.associations": {
        "*.tpl": "html",
        ".jsbeautifyrc": "json",
        ".stylelintrc": "json"
    },
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "editor.wordWrap": "on",
    "editor.renderIndentGuides": true,
    "javascript.validate.enable": false,
    "stylelint.enable": true,
    "less.validate": false,
    "css.validate": false,
    "sfmt.insize": 4
}
