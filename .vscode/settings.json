{
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/node_modules": true,
        "**/bower_components": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/dist": true,
        "**/public": true,
        "**/src/assets/css/": true
    },
    "files.associations": {
        "*.tpl": "html",
        ".jsbeautifyrc": "json",
        ".stylelintrc": "json"
    },
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "explorer.openEditors.visible": 0,
    "editor.wordWrap": "on",
    "editor.renderIndentGuides": true,
    "javascript.validate.enable": false,
    "less.validate": false,
    "css.validate": false,
    "sfmt.insize": 4
}
